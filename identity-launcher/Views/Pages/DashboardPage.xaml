<Page x:Class="identity_launcher.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:identity_launcher.Views.Pages"
      xmlns:vm="clr-namespace:identity_launcher.ViewModels"
      xmlns:components="clr-namespace:identity_launcher.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="800"
      d:Background="black"
      xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
      Style="{StaticResource PageStyle}"
      Title="DashboardPage">

    <Page.DataContext>
        <vm:DashboardViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource NavigationPanel}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition />
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <svgc:SvgViewbox 
                            Source="/Views/Resources/Images/logo_icon.svg"
                            Width="40"
                            Height="40"/>

                <Grid Grid.Row="1"
                      VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Button Style="{DynamicResource ProfileButton}">
                        <svgc:SvgViewbox 
                            Source="/Views/Resources/Images/Profile.svg"
                            Width="16"
                            Height="16"/>
                    </Button>

                    <components:ServersListComponent Grid.Row="1"
                                                     Margin="0, 10, 0, 0"
                                                     ServersList="{Binding ServersList}"/>
                </Grid>

            </Grid>
            
        </Border>

        <Border Grid.Column="1"
                Padding="60, 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <components:AllServerCounterComponent PlayerCount="2000"
                                                      HorizontalAlignment="Left"/>

                    <components:ServerLoaderComponent Grid.Column="1"
                                              Title="Загрузка сервера..."
                                              Description="minecraft.jar"
                                              VerticalAlignment="Center"/>

                    <components:MiniProfileComponent Grid.Column="2"
                                                     HorizontalAlignment="Right"
                                                     PlayerName="StarryMoon92"
                                                     HourPlayTime="42"
                                                     MinutesPlayTime="42"/>

                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="270"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center">

                        <Border BorderBrush="{StaticResource BorderBrushColor}"
                                BorderThickness="1.2"
                                Padding="10, 5"
                                CornerRadius="15"
                                HorizontalAlignment="Left">
                            <TextBlock Text="Офлайн"
                                       FontSize="14"
                                       Foreground="{StaticResource ContentForegroundColor}"/>

                        </Border>

                        <TextBlock Text="IDENTITY"
                                   FontWeight="Bold"
                                   FontSize="70"
                                   Width="320"
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   TextTrimming="WordEllipsis"
                                   Foreground="{StaticResource HeadlineForegroundColor}"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0, 15, 0, 0">
                            <Button Style="{DynamicResource PrimaryButton}"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <svgc:SvgViewbox Source="/Views/Resources/Images/circle_right_arrow.svg"
                                                     Width="20"
                                                     Height="20"/>
                                    <TextBlock Text="ИГРАТЬ"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               Margin="10, 0, 0, 0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SecondaryButton}"
                                    Margin="20, 0, 0, 0"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <svgc:SvgViewbox Source="/Views/Resources/Images/settings.svg"
                                                     Width="20"
                                                     Height="20"/>
                                    <TextBlock Text="НАСТРОЙКИ"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               Margin="10, 0, 0, 0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Style="{StaticResource AdditionalButton}"
                            VerticalAlignment="Center"
                            BorderBrush="Red"
                            BorderThickness="1"
                            HorizontalAlignment="Left"
                            Margin="20, 0, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <svgc:SvgViewbox Source="/Views/Resources/Images/mods.svg"
                                             Width="20"
                                             Height="20"/>
                            <TextBlock Text="СПИСОК МОДОВ"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       Margin="10, 0, 0, 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Style="{StaticResource AdditionalButton}"
                                VerticalAlignment="Center"
                                Width="55"
                                Height="45"
                                BorderBrush="Red"
                                BorderThickness="1"
                                HorizontalAlignment="Left"
                                Margin="20, 0, 0, 0">           
                            <StackPanel Orientation="Horizontal">
                                <svgc:SvgViewbox Source="/Views/Resources/Images/discord_icon.svg"
                                                 Width="20"
                                                 Height="20"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource AdditionalButton}"
                                 VerticalAlignment="Center"
                                 BorderBrush="Red"
                                 BorderThickness="1"
                                 HorizontalAlignment="Left"
                                 Margin="10, 0, 0, 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="НАШ САЙТ"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           Margin="10, 0, 0, 0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Border>

    </Grid>
</Page>
