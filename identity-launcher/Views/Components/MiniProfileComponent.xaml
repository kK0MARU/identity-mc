<UserControl x:Class="identity_launcher.Views.Components.MiniProfileComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:identity_launcher.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
            VerticalAlignment="Center">

            <TextBlock Margin="0, 5, 0, 0"
                       Text="{Binding PlayerName}"
                       d:Text="StarryMoon92"
                       FontSize="16"
                       Foreground="{StaticResource HeadlineForegroundColor}"
                       FontWeight="Bold">

            </TextBlock>
            <TextBlock Margin="0, 5, 0, 0">
                <Run Text="{Binding HourPlayTime}"
                        d:Text="42"
                        Foreground="{StaticResource HeadlineForegroundColor}"
                        FontWeight="Bold"/>
                <Run Text="ч."
                        Foreground="{StaticResource ContentForegroundColor}"/>
                <Run Text="{Binding MinutesPlayTime}"
                        d:Text="42"
                        Foreground="{StaticResource HeadlineForegroundColor}"
                        FontWeight="Bold"/>
                <Run Text="мин."
                        Foreground="{StaticResource ContentForegroundColor}"/>
            </TextBlock>
        </StackPanel>

        <Image Grid.Column="2"
               Width="46"
               Height="46"
               Source="/Views/Resources/Images/avatar.png">
            <Image.Clip>
                <EllipseGeometry RadiusX="23" RadiusY="23" Center="23 23"/>
            </Image.Clip>
        </Image>

    </Grid>
</UserControl>
